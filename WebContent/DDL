delimiter $$

CREATE DATABASE `mydb` /*!40100 DEFAULT CHARACTER SET latin1 */$$

delimiter $$

CREATE TABLE `transaction_category` (
  `idtransactionCategory` int(11) NOT NULL,
  `categoryName` varchar(45) NOT NULL,
  `categoryInfo` varchar(45) DEFAULT NULL,
  PRIMARY KEY (`categoryName`,`idtransactionCategory`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1$$

delimiter $$

CREATE TABLE `user` (
  `iduser` int(11) NOT NULL,
  `emailAddress` varchar(45) NOT NULL,
  `password` varchar(45) NOT NULL,
  `firstName` varchar(45) DEFAULT NULL,
  `lastName` varchar(45) DEFAULT NULL,
  `Gender` varchar(45) DEFAULT NULL,
  `Age` int(11) DEFAULT NULL,
  `dateOfCreation` date NOT NULL,
  PRIMARY KEY (`emailAddress`,`iduser`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1$$


delimiter $$

CREATE TABLE `user_transaction` (
  `iduserTransaction` int(11) NOT NULL,
  `transactionAmount` decimal(10,2) DEFAULT NULL,
  `transactionDate` date DEFAULT NULL,
  `transactionName` varchar(45) DEFAULT NULL,
  `transactionCategory` int(11) DEFAULT NULL,
  PRIMARY KEY (`iduserTransaction`)
) ENGINE=InnoDB DEFAULT CHARSET=latin1$$


